rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to community songs
    // Allow creation if user is authenticated (anonymous counts)
    match /community_songs/{songId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    // User data (scores) - only allow access to own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
